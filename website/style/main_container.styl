mainHeight = 90vh
infoWidth = 400px
flex()
    display flex
    align-items center
#mainContainer
    height mainHeight
    #gridPage
        display none
    .page
        height mainHeight
        #map
            height mainHeight;
            padding 0
            margin 0
        #shipInfo
            height 300px
            width infoWidth
            position fixed
            z-index 100
            background-color #F0F8FF
            border 1px solid #000
            display none
            .shipInfoLine
                flex()
                height 60px
                width 100%
                border-top 1px solid #000
                .shipInfoItem
                    width 50%
                    padding-left 10px
                    span
                        font-size 18px
                        color #555
                        font-style italic